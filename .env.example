# TickTick API credentials
# Get these from https://developer.ticktick.com/manage

# Required: Your TickTick application credentials
TICKTICK_CLIENT_ID=your_client_id_here
TICKTICK_CLIENT_SECRET=your_client_secret_here

# These will be populated after authentication
# Run 'uv run -m ticktick_mcp.cli auth' to generate these
TICKTICK_ACCESS_TOKEN=
TICKTICK_REFRESH_TOKEN=

# Optional: For Dida365 (China version of TickTick)
# Uncomment and set these if using Dida365
# TICKTICK_BASE_URL=https://api.dida365.com/open/v1
# TICKTICK_AUTH_URL=https://dida365.com/oauth/authorize
# TICKTICK_TOKEN_URL=https://dida365.com/oauth/token

# ============================================
# OAuth2 Gateway Configuration (Remote MCP)
# ============================================
# Required for Claude Desktop remote connector authentication

# OAuth clients that can access your MCP server
# Format: client_id1:client_secret1,client_id2:client_secret2
# Generate a secure client secret:
#   python -c "import secrets; print(f'claude:{secrets.token_urlsafe(32)}')"
MCP_OAUTH_CLIENTS=claude:your_secure_client_secret_here

# JWT signing key for access tokens (base64 encoded, 32+ bytes)
# Generate with:
#   python -c "import secrets, base64; print(base64.b64encode(secrets.token_bytes(32)).decode())"
MCP_OAUTH_SIGNING_KEY=your_base64_encoded_signing_key_here

# Token expiry in seconds (default: 900 = 15 minutes)
MCP_TOKEN_EXPIRY=900

# Internal FastMCP server URL (default: http://127.0.0.1:8000)
FASTMCP_SERVER_URL=http://127.0.0.1:8000

# ============================================
# Reverse Proxy Configuration (Optional)
# ============================================
# For nginx-proxy or Traefik automatic SSL

VIRTUAL_HOST=ticktick.yourdomain.com
VIRTUAL_PORT=8080
LETSENCRYPT_HOST=ticktick.yourdomain.com
LETSENCRYPT_EMAIL=your@email.com

# Logging level
LOG_LEVEL=INFO
